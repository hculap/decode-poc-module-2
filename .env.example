# Database connection string
# Example: postgresql://username:password@localhost:5432/fireflies_db
DATABASE_URI=sqlite:///fireflies.db

# Fireflies.ai API Key (Required)
FIREFLIES_API_KEY=your_fireflies_api_key_here

# Fireflies.ai Webhook Secret (Optional but recommended)
FIREFLIES_WEBHOOK_SECRET=your_webhook_secret_here

# Flask Settings
FLASK_APP=wsgi.py
FLASK_ENV=development
